HELIXDB_ENABLED=true
HELIXDB_URL=https://your-helix-host.example.com

# Optional if your Helix deployment requires a key header.
# If your deployment does not use an API key, leave this unset.
HELIXDB_API_KEY=replace-with-your-key

HELIX_ENDPOINT_CREATE_NODE=CreateNode
HELIX_ENDPOINT_UPSERT_EDGE=UpsertEdge
HELIX_ENDPOINT_UPSERT_EVIDENCE=UpsertEvidence
HELIX_ENDPOINT_FIND_CONNECTIONS=FindConnections
HELIX_ENDPOINT_RECOMMEND_NEXT_ACTIONS=RecommendNextActions
HELIX_ENDPOINT_GRAPH_INSIGHTS=GraphInsights
HELIX_ENDPOINT_SET_CONTEXT_PROFILE=SetContextProfile
HELIX_ENDPOINT_GET_CONTEXT_PROFILE=GetContextProfile
HELIX_ENDPOINT_LIST_CONTEXT_PROFILES=ListContextProfiles
HELIX_ENDPOINT_SET_CONVERSATION_PROFILE=SetConversationProfile
HELIX_ENDPOINT_GET_CONVERSATION_PROFILE=GetConversationProfile

MCP_HTTP_PORT=8788
VITE_API_BASE_URL=https://your-api-host.example.com

# Auto-sync worker (runs inside API server)
MINDMAP_AUTO_SYNC_ENABLED=false
MINDMAP_AUTO_SYNC_INTERVAL_MS=300000
MINDMAP_AUTO_SYNC_GIT=true
MINDMAP_AUTO_SYNC_CURSOR=true
MINDMAP_AUTO_SYNC_GIT_REPO_PATH=.
MINDMAP_AUTO_SYNC_GIT_BRANCH=
MINDMAP_AUTO_SYNC_GIT_LIMIT=25
# Optional override; defaults to Cursor project transcripts path derived from cwd
# MINDMAP_AUTO_SYNC_CURSOR_DIR=/absolute/path/to/agent-transcripts
# Optional override for checkpoint state file
# MINDMAP_AUTO_SYNC_STATE_PATH=/absolute/path/to/auto-sync-state.json
